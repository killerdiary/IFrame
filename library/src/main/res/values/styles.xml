<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base_Theme">
        <item name="appHeaderHeight">@dimen/header_height</item>
        <item name="appBackground">@color/smoke</item>
        <item name="appThemeColor">@color/blue</item>
        <item name="appTitleSize">@dimen/txt_title</item>
        <item name="appTitleColor">@color/white</item>
        <item name="appTitleBarBg">?attr/appThemeColor</item>
        <item name="appProgressColor">?attr/appThemeColor</item>
        <item name="appControlHighlight">@color/highlight</item>
        <item name="appTextStyle">@style/Base_TxtStyle</item>
        <item name="appEditStyle">@style/Base_EditStyle</item>
        <item name="appButtonStyle">@style/Base_BtnStyle</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">?attr/appBackground</item>

        <item name="android:textViewStyle">@style/Base_TxtStyle</item>
        <item name="android:editTextStyle">@style/Base_EditStyle</item>
        <item name="android:buttonStyle">@style/Base_BtnStyle</item>
    </style>

    <style name="Base_TxtStyle">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textColorHint">@color/txt_gray</item>
        <item name="android:textColorHighlight">@color/txt_gray_light</item>
        <item name="android:textColorLink">@color/blue</item>
        <item name="android:textSize">@dimen/txt_default</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Base_EditStyle" parent="Base_TxtStyle">
        <item name="android:hint">@string/edit_input_hint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColorHint">@color/txt_gray_light</item>
    </style>

    <style name="Base_BtnStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>

    <style name="Base_DialogTheme">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="animBottomInBottomOutStyle">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>


</resources>